{
  "manifest_version": 3,
  "name": "Send to ntfy",
  "version": "2.0",
  "description": "Send notifications to ntfy.sh with file attachments, priority, and tags",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{cad379db-edfe-4c5e-b936-27a19156b5dc}"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}